<h1>Watch List</h1>

<div class="movies-container">
  <% @movies.each do |movie| %>
    <div class="movie-card">
      <h3><%= movie.title %></h3>
      <p><%= movie.overview %></p>
      <p>Rating: <%= movie.rating.round(1) %></p>
      <img src="<%= movie.poster_url %>" alt="<%= movie.title %> Poster">
    </div>
  <% end %>
</div>
